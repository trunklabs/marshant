{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", "group:monorepos", "helpers:pinGitHubActionDigests"],
  "packageRules": [
    {
      "description": "Pin Node.js to v24 (LTS)",
      "matchPackageNames": ["node", "@types/node"],
      "allowedVersions": "24.x"
    },
    {
      "description": "Pin Docker node base image to v24",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["node"],
      "allowedVersions": "/^24\\./"
    },
    {
      "description": "Group postgres updates across dev and e2e compose files",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["postgres"],
      "matchFileNames": ["compose.yaml", "services/web/e2e/compose.yaml"],
      "groupName": "postgres"
    }
  ]
}
